{{> /common/header }}
<form action="/private/modify" method="post">
	<div class="mb-3">
		{{#avatar}}
			<div class="form-check form-check-inline">
				<input class="form-check-input" type="radio" name="avatar" id="{{id}}" value="{{id}}"/>
	  			<label class="form-check-label" for="{{id}}"><img src="{{url}}" height="120px"/></label>
			</div>
		{{/avatar}}
	</div>
	<div class="mb-3">
		<label for="description" class="form-label">자기소개</label>
		<textarea class="form-control" name="description" rows="3">{{#user}}{{description}}{{/user}}</textarea>
	</div>
	<div class="mb-3">
		<label for="address" class="form-label">주소</label>
		<input type="text" class="form-control" name="address" value="{{#user.address}}{{.}}{{/user.address}}"/>
	</div>
	<div class="mb-3">
		<label for="birthday" class="form-label">생일</label>
		<input type="date" class="form-control" name="birthday" value="{{#fomatDate}}{{.}}{{/fomatDate}}"/>
	</div>
	<div class="d-flex justify-content-between">
		<button type="submit" class="btn btn-warning">정보 수정</button>
		<button type="button" class="btn btn-danger" id="del-bt">회원 탈퇴</button>
	</div>
</form>
<script>
	document.querySelector("#del-bt").onclick = function(evt) {
		if (confirm("회원 탈퇴를 진행하시겠습니까?\n탈퇴 진행시 데이터는 모두 삭제되어 복구할 수 없습니다.")) {
			location.href="/user/delete";
		}
	};
</script>
{{> /common/footer }}